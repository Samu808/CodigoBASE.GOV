from matplotlib.lines import Line2D
# Limpiar datos
df['AÃ‘O_DENUNCIA'] = pd.to_numeric(df['AÃ‘O_DENUNCIA'], errors='coerce')
df['AÃ‘O_HECHOS'] = pd.to_numeric(df['AÃ‘O_HECHOS'], errors='coerce')
df['AÃ‘O_ENTRADA'] = pd.to_numeric(df['AÃ‘O_ENTRADA'], errors='coerce')
df_clean = df.dropna(subset=['AÃ‘O_DENUNCIA', 'AÃ‘O_HECHOS', 'AÃ‘O_ENTRADA'])

# Crear figura 3D
fig = plt.figure(figsize=(10,7))
ax = fig.add_subplot(111, projection='3d')

# Definir ejes con datos limpios
x = df['AÃ‘O_DENUNCIA']
y = df['AÃ‘O_HECHOS']
z = df['AÃ‘O_ENTRADA']

# Mapeo de colores (asegÃºrate de que las claves coincidan con tus datos)
species_colors = {
    'IndagaciÃ³n': 'r',
    'Juicio': 'g',
    'EjecuciÃ³n de penas': 'b',
    'InvestigaciÃ³n': 'm',
    'TerminaciÃ³n anticipada': 'y'
}
colors = df['ETAPA_CASO'].map(species_colors)

# GrÃ¡fico de dispersiÃ³n
ax.scatter(x, y, z, c=colors, s=60)

# Etiquetas y tÃ­tulo
ax.set_xlabel('AÃ‘O_DENUNCIA')
ax.set_ylabel('AÃ‘O_HECHOS')
ax.set_zlabel('AÃ‘O_ENTRADA')
ax.set_title('RelaciÃ³n entre aÃ±os de denuncia, hechos y entrada')
legend_elements = [Line2D([0], [0], marker='o', color='w', label=key,
                   markerfacecolor=val, markersize=10) for key, val in species_colors.items()]
ax.legend(handles=legend_elements, title='Etapas del Caso')
plt.show()


